for(int i = 0; i < bets.size(); i++){

}

}
}catch(InterruptedException e){

}

public static boolean isNumeric(String strNum){
if(strNum == null){
return false;
}
try{

int i = Integer.parseInt(strNum);
}catch(NumberFormatException nfe){

return false;
}
return true;
}

}
